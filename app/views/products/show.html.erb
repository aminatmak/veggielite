<div class="container">
  <div class="card-body">
        <div class="row">
          <div class="col-7">
            <h1 class="card-title"><%= @product.name %></h1>
            <h5 class="card-text">
              <%= @product.description %>
            </h5>
            <div class="category d-flex">
              <h5 class="d-flex p-2 w-100 bd-highlight">Category:
                  <%= @product.categories %>
                  <%= @product.supplier_country %>
              </h5>
            </div>

          </div>
          <div class="col-5">
            <div class="card-breakdown">
              <div class="card-price d-flex justify-content-between text-bold flex-shrink-1 bd-highlight py-3 rounded">
                <h5 class="card-trip-pricing d-flex text-bold flex-shrink-1 bd-highlight"> <%= humanized_money_with_symbol(@product.price) %> </h5>
                <div class="d-flex justify-content-between align-items-center">
                  <i class="card-star far fa-star pl-2"></i>
                  <h5 class="mb-0 px-2"> <%= @product.quantity %> </h5>
                </div>
              </div>
              <div class="justify-content-center align-items-center">
                <p class="">
                Calories: <%= @product.calories %>
                </p>
                <p class="">
                Protein: <%= @product.macros['protein'] %>
                </p>
                <p class="">
                Carbs: <%= @product.macros['carbs'] %>
                </p>
                <p class="">
                Fat: <%= @product.macros['fat'] %>
                </p>
              </div>
            </div>
            <%= render partial: 'cart_info', locals: { product_id: @product.id, cart: @cart }%>
          </div>
        </div>
      </div>
    </div>

</div>
