
<div class="products-banner" style="background-image: linear-gradient(hsla(132, 29%, 50%, 0.8),hsla(132, 29%, 50%, 0.8)), url(https://images.unsplash.com/photo-1610832958506-aa56368176cf?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">
  <div class="home-container">
    <h1><%= @product.name %></h1>
  </div>
</div>

<div class="container">
<div class="btn yellow-back mt-4 m-3">
              <i class="fas fa-chevron-left"></i>
</div>
  <div class="card-body">
        <div class="row">
          <div class="col-7">
              <h5 class="d-flex p-2 w-100 bd-highlight">
                  <% @product.categories.each do |category| %>
                     <button type="button" class="btn-home" style="display-flex; justify-content: space-between;"> <%= category %> <span class="badge"></span></button>
                  <% end %>
              </h5>
            <h4 class="card-text mt-5">
              <%= @product.description %>
            </h4>
            <div class="category d-flex">
            </div>
            <div>
              <h5 class="mt-5">Country: <%= @product.supplier_country %></h5>
              <h5>Shop: <%= @product.shop %></h5>
            </div>
            <div style="display:flex; flex-direction:column; align-items: end;">
              <h3 class="align-items-right">Price: <%= humanized_money_with_symbol(@product.price) %></h3>
            </div>
          </div>
          <div class="col-5">
            <div class="card-breakdown">
              <div class="card-price d-flex justify-content-between text-bold flex-shrink-1 bd-highlight py-3 rounded">
                <div class="d-flex justify-content-between align-items-center">
                  <h5 class="mb-0 px-2"> <%= @product.quantity %> </h5>
                </div>
              </div>
              <div class="justify-content-center align-items-center">
                <p class="">
                Calories: <%= @product.calories %>
                </p>
                <p class="">
                Protein: <%= @product.macros['protein'] %>
                </p>
                <p class="">
                Carbs: <%= @product.macros['carbs'] %>
                </p>
                <p class="">
                Fat: <%= @product.macros['fat'] %>
                </p>
              </div>
            </div>
            <%= render partial: 'cart_info', locals: { product_id: @product.id, cart: @cart }%>
          </div>
        </div>
      </div>
    </div>

</div>
