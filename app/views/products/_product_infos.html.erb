<div class="container position absolute">
  <div class="row">
    <div class="col">
      <div class="movie-card">
        <div class="cards">
          <% @products.each do |product| %>
            <div class="card-trip position relative">

              <%= image_tag "https://images.unsplash.com/photo-1601004890684-d8cbf643f5f2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1315&q=80 mx-3" %>
              <div class="card-trip-infos">
                <div>
                  <%= link_to product.name, product, class: 'nav-link' %>
                  <p> <strong>Supplier country:</strong> <%= product.supplier_country %> </p>
                  <p> <strong> Calories:</strong> <%= product.calories %> </p>
                  <p> <strong>Protein:</strong> <%= product.macros['protein'] %> </p>
                  <p> <strong>Fat:</strong> <%= product.macros['fat'] %> </p>
                  <p> <strong>Carbs:</strong> <%= product.macros['carbs'] %> </p>
                  <p> <strong>Shop:</strong> <%= product.shop.name %> </p>
                </div>
                <div class="d-flex justify-content-center p-3">
                  <h2 class="card-trip-pricing mx-3">AED <%= product.price_cents %></h2>
                <%= render partial: 'cart_info', locals: { product_id: product.id, cart: @cart }%>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
