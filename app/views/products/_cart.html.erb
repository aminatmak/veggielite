<% @orders.each do |order| %>
<h3><%= order.product.name%></h3>
<h3><%= order.product.supplier_country %></h3>
<h3><%= order.product.price %></h3>
<%= form_with model: order do |f|%>
<%= f.hidden_field :product_id, value: order.product.id %>
<%= f.number_field :quantity, value: order.quantity.to_i%>
<%= f.submit "Update Cart" %>
<%= link_to "Remove Orders", order, method: :delete, remote: true %>
<% end%>
