<div class="bg-white sticky">
  <div class="nav home-container sticky">

    <%= link_to root_path, class: "logo" do %>
      <%= image_tag "veggielite_logo.png" %>
    <% end %>

    <ul class="nav-buttons">
      <li><%= link_to "Home", root_path, class:"btn-home" %></li>
      <li><% if current_user && @cart %>
          <%= button_to orders_path, disabled: true do %>
            <div class="btn-checkout" data-bs-toggle="tooltip" data-placement="left" title="Checkout">
              <i class="fas fa-shopping-cart" style='font-size:17px;'>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning" style="16px;" id="counter">
                  <%= @cart.size %>
                </span>
              </i>
            </div>
          <% end %>
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Cart</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  Here goes the product list
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <%= button_to 'Checkout', orders_path %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </li>
      <%# <li><%= link_to "Log In", new_user_session_path, class: 'btn-login'</li> %>
      <li class="nav-item dropdown">
        <%= link_to new_user_session_path do %>
          <i class="fas fa-user-circle" style='font-size:33px; color: var(--clr-green-300);'></i>
        <% end %>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Sign Up", new_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Log In", new_user_session_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>
