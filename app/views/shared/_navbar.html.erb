<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "root", class: "navbar-brand" do %>
    <%= image_tag "https://www.matthijs.nl/wp-content/uploads/2018/07/logo-Veggie-1024x844.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", root_path, class:"btn btn-ghost " %>
      </li>
      <li class="nav-item">
        <% if @cart %>
          <button type="button" class="btn btn-secondary" data-bs-toggle="tooltip" data-placement="left" title="Shopping Cart">
            <i class="fas fa-shopping-cart">
              <span class="badge badge-light">
                <%= @cart.size %>
              </span>
            </i>
          </button>
        <% end %>
      </li>
      <%# <li class="nav-item">
        <%= link_to "Messages", "#", class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <i class="fas fa-user-circle"></i>
        <%= link_to class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false do %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Sign Up", "#", class: "dropdown-item" %>
          <%= link_to "Log In", new_user_session_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>

<% if @cart %>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Shopping Cart
  </button>
<% end %>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Shopping Cart</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render 'product_infos', cart: @cart %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Checkout</button>
      </div>
    </div>
  </div>
</div>
