<div class="products-banner" style="background-image: linear-gradient(hsla(132, 29%, 50%, 0.8),hsla(132, 29%, 50%, 0.8)), url(https://images.unsplash.com/photo-1610832958506-aa56368176cf?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">
  <div class="home-container">
    <h1>Where we source our products</h1>
  </div>
</div>

<div class="home-container position absolute">
  <div class="row">
    <div class="col">
      <div data-controller="search-products">
        <%= form_with url: products_path, method: :get, html: { class:
            'mb-4', data: { search_products_target: 'form' } } do |f| %>
          <%= f.text_field :query,
                          class: "form-control search-bar",
                          placeholder: 'Search',
                          value: params[:query],
                          data: {
                            search_products_target: 'input',
                            action: 'keyup->search-products#search'
                            } %>
        <% end %>
        <div class="navigation menu_items d-flex justify-content-center">
          <ul class="list-inline categories">
            <li class="gluten-free list-inline-item">
              <div class="product-categories">
                <%= link_to products_path, class:'nav-link' do %>
                  <i class="fas fa-utensils"></i>
                <% end %>
              </div>
              <span class="categories-text">All Products</span>
            </li>
            <li class="gluten-free list-inline-item">
              <div class="product-categories">
                <%= link_to products_path(category: "Gluten free"), class:'nav-link' do %>
                  <i class="fas fa-cookie-bite"></i>
                <% end %>
              </div>
              <span class="categories-text">Gluten free</span>
            </li>
            <li class="sugar-free list-inline-item">
              <div class="product-categories">
                <%= link_to products_path(category: "Sugar free"),class:'nav-link' do %>
                <i class="fas fa-birthday-cake"></i>
                <% end %>
              </div>
              <span class="categories-text">Sugar free<span>
            </li>
            <li class="dairy-free list-inline-item">
              <div class="product-categories">
                <%= link_to products_path(category: "Dairy free"),class:'nav-link' do %>
                <i class="fas fa-ice-cream"></i>
                <% end %>
              </div>
              <span class="categories-text">Dairy free</span>
            </li>
            <li class="vegan list-inline-item">
              <div class="product-categories">
                <%= link_to products_path(category: "Vegan"),class:'nav-link' do %>
                <i class="fas fa-seedling"></i>
                <% end %>
              </div>
              <span class="categories-text">Vegan</span>
            </li>
            <li class="vegetarian list-inline-item">
              <div class="product-categories">
                <%= link_to products_path(category: "Vegetarian"),class:'nav-link' do %>
                <i class="fas fa-carrot"></i>
                <% end %>
              </div>
              <span class="categories-text">Vegetarian</span>
            </li>
            <li class="pescetarian list-inline-item">
              <div class="product-categories">
                <%= link_to products_path(category: "Pescetarian"),class:'nav-link' do %>
                <i class="fas fa-fish"></i>
                <% end %>
              </div>
              <span class="categories-text">Pescetarian<span>
            </li>
            <li class="organic list-inline-item">
              <div class="product-categories">
                <%= link_to products_path(category: "Organic"),class:'nav-link' do %>
                <i class="fab fa-pagelines"></i>
                <% end %>
              </div>
              <span class="categories-text">Organic</span>
            </li>
          </ul>
        </div>
      <div class="container position absolute">
        <div class="row">
          <div class="col">
            <div class="mproduct-card">
              <div class="cards">
                <% @shops.each do |shop| %>
                  <div class="card-trip position relative">
                <% if shop.photos.attached? %>
                <%= cl_image_tag shop.photos.first.key %>
              <% end %>
            <div class="col-4">
              <div class="card-trip-infos">
                <div class="card-body">
                  <h1><strong><%= shop.name %></strong></h1>
                  <p><strong> Address: </strong></p><%= shop.address %></p>
                  <p><strong> Phone Number: </strong></p><%= shop.phone_number %></p>
                  <p><strong> Email Address: </strong><%= shop.email %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
